@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Fruit";
}

<form method="post">
 	<input hidden asp-for="FruitModel.Id" />
 	<div class="border col-md-6 p-3 mt-4">
 		<div class="row pb-2">
 			<h2 class="text-primary pl-3">Delete Fruit</h2>
 			<hr />
 		</div>
 		<div class="mb-3">
 			<label asp-for="FruitModel.Name" class="h5"></label><br/>
 			<input required type="text" asp-for="FruitModel.Name" disabled/>
 			<span asp-validation-for="FruitModel.Name" class="text-danger"></span>
 		</div>
 		<div class="mb-3">
 			<label asp-for="FruitModel.Instock" class="h5"></label><br/>
 			<input type="checkbox" asp-for="FruitModel.Instock" style="width:20px; height:20px" disabled  />
 			<span asp-validation-for="FruitModel.Instock" class="text-danger"></span>
 		</div>
 		<button type="submit" class="btn btn-danger " style="width:150px;">Delete</button>
 		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a>
 	</div>
 </form>
